// This schema file is the source of truth for the database
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  role          String    @default("user") // admin, user
  image         String?
  accounts      Account[]
  sessions      Session[]
  decks         Deck[]
  credits       Int       @default(30)
  xp            Int       @default(0)  // 総獲得経験値
  weeklyXp      Int       @default(0)  // 週間経験値（ランキング用）
  lastLoginAt   DateTime? // 最終ログイン日時
  loginStreak   Int       @default(0)  // 連続ログイン日数
  isOnboarded   Boolean   @default(false)
  isPublicRanking Boolean @default(false)
  badges        UserBadge[]

  // Stripe Subscription
  stripeCustomerId       String?
  subscriptionId         String?
  subscriptionStatus     String?   // active, past_due, canceled, etc.
  subscriptionPlan       String?   // basic, pro
  subscriptionPeriodEnd  DateTime?
}

// バッジの定義
model Badge {
  id          String   @id @default(cuid())
  name        String   @unique // バッジ名（コード用ID）
  displayName String   // 表示名
  description String   // 説明文
  icon        String   // 絵文字など
  condition   String   // 獲得条件のメモ
  createdAt   DateTime @default(now())
  users       UserBadge[]
}

// ユーザーが獲得したバッジ
model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  obtainedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId]) // 同じバッジは1つまで
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Deck {
    id        String   @id @default(cuid())
    title     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    words     WordCard[]
}

model WordCard {
    id        String   @id @default(cuid())
    word      String
    meaning   String
    partOfSpeech String? // 品詞（動詞、名詞など）
    example   String
    example_jp String
    deckId    String
    deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
    isMastered Boolean  @default(false)
    createdAt DateTime @default(now())

    synonyms    Json?  // 類義語: [{word, partOfSpeech, meaning}]
    derivatives Json?  // 派生語: [{word, partOfSpeech, meaning}]
}

// 生成済み単語のキャッシュ辞書
model DictionaryEntry {
  id        String   @id @default(cuid())
  word      String   @unique
  data      Json     // 生成された全データ（意味、品詞、例文など）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inquiry {
  id        String   @id @default(cuid())
  email     String
  type      String   // "bug", "feature", "other"
  message   String
  status    String   @default("open")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
}
